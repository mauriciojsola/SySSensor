@model List<SySSensor.Web.Models.Logs.LogFileViewModel>

@{
    ViewBag.Title = "SySSensor - Logs";
}

<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-bar-chart-o fa-fw"></i> Sensor Log Files
                </h3>
            </div>
            <div class="panel-body">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Filename</th>
                            <th>Created Date</th>
                            <th>Was Processed?</th>
                            <th>Processing Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var f in Model)
                        {
                            <tr>
                                <td>@f.Filename</td>
                                <td>@f.DateCreated.ToShortDateString()</td>
                                <td>@(f.ProcessDate.HasValue ? "YES" : "NO")</td>
                                <td>@(f.ProcessDate.HasValue ? f.ProcessDate.Value.ToShortDateString() : "--")</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            "use strict";

        });
    </script>
}
